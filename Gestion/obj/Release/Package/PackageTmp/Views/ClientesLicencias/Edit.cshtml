@model Gestion.Models.ClientesLicencia

@Html.Partial("_Header", Model)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ID)
    
    @Html.Partial("_Form", Model)

    List<Gestion.ViewModels.ProductosAsignados> prodAsig = ViewBag.Productos;



    <div class="well col-lg-8 col-lg-offset-2">
        <h3 style="text-align: center">Productos y M&oacute;dulos</h3>
        @foreach (var prod in prodAsig)
        {
            <div class="row">
                <div class="col-md-offset-2 col-md-8">


                    <div class="make-switch make-switch-full" data-text-label="@prod.Descripcion"
             data-on-label="<i class='glyphicon glyphicon-ok blanco'></i>"
             data-off-label="<i class='glyphicon glyphicon-remove'></i>">
                        <input type="checkbox" name="selectedProductos" value="@prod.ProductoID" id="@prod.ProductoID"  @(Html.Raw(prod.Asignado ? "checked" : "")) />
                    </div>



                    @*            <label class="checkbox" for="@prod.ProductoID">
                <span class="icons">
                    <span class="first-icon fui-checkbox-unchecked"></span>
                    <span class="second-icon fui-checkbox-checked"></span>
                </span>
                <input type="checkbox" name="selectedProductos" value="@prod.ProductoID" id="@prod.ProductoID" data-toggle="checkbox" @(Html.Raw(prod.Asignado ? "checked=\"checked\"" : "")) />
                @prod.Descripcion
            </label>*@

                </div>
                <div class="col-md-1">
                    <a href="/@Model.ID/ClientesLicencias/GetModExcluidos/@prod.ProductoID"  class="modExcluidos" data-gestion-setModExc="/@Model.ID/ClientesLicencias/SetModExcluidos/@prod.ProductoID">@(Html.Raw(prod.Asignado ? "<span class=\"glyphicon glyphicon-search azulOscuro lupasModulos\"></span>" : ""))</a>
                </div>
            </div>
        }
    </div>
  
}