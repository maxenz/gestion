@model Gestion.Models.ClientesContacto

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Contactos</h3>
            </div>
            <div class="panel-body">
                <div class="row show-grid">
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre", autofocus = "" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @placeholder = "Teléfono" })
                        @Html.ValidationMessageFor(model => model.Telefono)
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Otros, new { @class = "form-control", @placeholder = "Otro.." })
                        @Html.ValidationMessageFor(model => model.Otros)
                    </div>
                    <div class="col-md-3" style="padding-top:5px">
                        @Html.LabelFor(model => model.esInstitucional)
                        @Html.EditorFor(model => model.esInstitucional, new { @class = "form-control", @placeholder = "Institucional" })
                        @Html.ValidationMessageFor(model => model.esInstitucional)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" value="Guardar" class="btn btn-block btn-primary btnSubmit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
