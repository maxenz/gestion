@model PagedList.IPagedList<Gestion.Models.LogRegistroSistema>
@using PagedList.Mvc;

<div id="logsRegistroSistemaList">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Listado de Logs del Registro del Sistema</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover table-striped table-bordered tableIndex">
                                <thead>
                                    <tr>
                                        <th class="col-lg-4 centrado">
                                            @Html.DisplayNameFor(model => model.First().DescripcionAccion)
                                        </th>
                                        <th class="col-lg-4 centrado">
                                            @Html.DisplayNameFor(model => model.First().ObservacionesAccion)
                                        </th>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().UserProfile.UserName)
                                        </th>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().Fecha)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td class="col-lg-4 centrado">
                                                @Html.DisplayFor(modelItem => item.DescripcionAccion)
                                            </td>
                                            <td class="col-lg-4 centrado">
                                                @Html.DisplayFor(modelItem => item.ObservacionesAccion)
                                            </td>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.UserProfile.UserName)
                                            </td>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="pagedList centrado" data-gestion-target="#logsRegistroSistemaList">

                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









