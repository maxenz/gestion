@model PagedList.IPagedList<Gestion.Models.MedioDifusion>
@using PagedList.Mvc;

<div id="mediosDifusionList">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Listado de Medios de Difusi&oacute;n</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover table-striped table-bordered tableIndex">
                                <thead>
                                    <tr>
                                        <th class="col-lg-6 centrado">
                                            @Html.DisplayNameFor(model => model.First().Descripcion)
                                        </th>
                                        <th class="col-lg-3 centrado">
                                            @Html.DisplayNameFor(model => model.First().MapaVisible)
                                        </th>
                                        <th class="col-lg-1 centrado"></th>
                                        <th class="col-lg-1 centrado"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="col-lg-6 centrado">
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td class="col-lg-3 centrado">
                                                @if (item.MapaVisible)
                                                {
                                                    <span style="color: green; font-weight: bold">
                                                        SI
                                                    </span>     
                                                }
                                                else
                                                {
                                                    <span style="color: red; font-weight: bold">
                                                        NO
                                                    </span>
                                                }
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="MediosDifusion/Edit/@item.ID"><span class="glyphicon glyphicon-edit azulOscuro"></span></a>
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="MediosDifusion/Delete/@item.ID" class="delete" data-gestion-target="#mediosDifusionList"><span class="glyphicon glyphicon-remove-circle rojo"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="pagedList centrado" data-gestion-target="#mediosDifusionList">

                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
