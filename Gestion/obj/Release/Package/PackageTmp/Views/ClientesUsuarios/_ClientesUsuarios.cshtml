@model IList<Gestion.Models.ClientesUsuario>

<div id="clientesUsuariosList">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Usuarios del Cliente</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover table-striped table-bordered tableIndex">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().Usuario.UserName)
                                        </th>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().ShamanFullID)
                                        </th>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().ShamanExpressID)
                                        </th>
 
                                        <th class="col-lg-1 centrado"></th>
                                        <th class="col-lg-1 centrado"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.Usuario.UserName)
                                            </td>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.ShamanFullID)
                                            </td>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.ShamanExpressID)
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="@item.ClienteID/ClientesUsuarios/Edit/@item.ID"><span class="glyphicon glyphicon-edit azulOscuro"></span></a>
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="@item.ClienteID/ClientesUsuarios/Delete/@item.ID" class="delete" data-gestion-target="#clientesUsuariosList"><span class="glyphicon glyphicon-remove-circle rojo"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="row">

                                <div class="col-md-4 col-md-offset-4 ">
                                    <a href="@ViewBag.Cliente_ID/ClientesUsuarios/Create" class="btn btn-block  btn-primary btnSubmit">Agregar Usuario</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







