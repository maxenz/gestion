@model Gestion.Models.Ticket

<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Ticket</h3>
            </div>
            <div class="panel-body">
                <div class="row show-grid">
                    <div class="col-lg-12">
                        @Html.TextBoxFor(model => model.Asunto, new { @class = "form-control", @placeholder = "Asunto", autofocus = "" })
                        @Html.ValidationMessageFor(model => model.Asunto)
                    </div>
                </div>
                <div class="row show-grid">
                    <div class="col-lg-12">
                        @Html.TextArea("Descripcion", new { @class = "form-control consulta", @placeholder = "Ingrese su consulta...", rows = "6" })
                        @Html.ValidationMessage("Descripcion")
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <input type="file" name="image" accept="image/x-png, image/gif, image/jpeg" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" value="Enviar" class="btn btn-block btn-primary btnSubmit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


