@model PagedList.IPagedList<Gestion.ViewModels.Recontacto>
@using PagedList.Mvc;

<div id="recontactoList">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Listado de Recontactos</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover table-striped table-bordered tableIndex">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().Fecha)
                                        </th>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().Cliente)
                                        </th>
                                        <th class="col-lg-8 centrado">
                                            @Html.DisplayNameFor(model => model.First().Observaciones)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {                              
                                        <tr>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td class="col-lg-2 centrado">
                                                @(Html.Raw(item.ClienteID == 0 ? item.Cliente : "<a href=\"/Clientes/Edit/" + item.ClienteID + "\">" + item.Cliente + "</a>"))
                                            </td>
                                           @if (item.Tipo == "G")
                                        {
                                            <td class="col-lg-8 centrado" style="background-color:rgb(112, 170, 112);color:white">
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>
                                           } else {
                                                <td class="col-lg-6 centrado" style="background-color:rgb(162, 16, 16);color:white">
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>
                                           }
                                        </tr>
                                           
                                        
                                    }
                                </tbody>

                            </table>

                            <div class="pagedList centrado" data-gestion-target="#recontactoList">

                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




