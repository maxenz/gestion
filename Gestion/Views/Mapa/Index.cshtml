@{
    var medios = ViewBag.MediosDifusion;
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row" style="margin-top: -20px">
                <div class="span8 offset2" style="margin-bottom: -15px">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-filter"></i>
                            <h3>Filtros</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content" style="margin-top: -10px; padding-bottom: 10px">
                            <div class="row">
                                <div class="span8">
                                    @foreach (var item in medios)
                                    {
                                        <div class="span3">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <input type="checkbox" class="chkMediosDifusion" value="@item.ID" />
                                                </span>
                                                <input type="text" class="form-control txtMediosDifusion" readonly="true" value="@item.Descripcion" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <!-- /bar-chart -->
                        </div>
                        <!-- /widget-content -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span12">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-filter"></i>
                            <h3>Mapa</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content" style="padding:0 0 0">
                            <div id="map_canvas" style="width: 100%; height: 465px"></div>
                            <script>
                                initializeMapa();
                            </script>
                            <!-- /bar-chart -->
                        </div>
                        <!-- /widget-content -->
                    </div>
                </div>
            </div>

        </div>
        <!-- /main-inner -->
    </div>
</div>


