@model IList<Gestion.Models.ClientesTerminal>

<div id="clientesTerminalesList">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Terminales del Cliente</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover table-striped table-bordered tableIndex">
                                <thead>
                                    <tr>
                                        <th class="col-lg-3 centrado">
                                            @Html.DisplayNameFor(model => model.First().TipoTerminal.Descripcion)
                                        </th>
                                        <th class="col-lg-3 centrado">
                                            @Html.DisplayNameFor(model => model.First().Referencia)
                                        </th>
                                        <th class="col-lg-1 centrado">
                                            @Html.DisplayNameFor(model => model.First().Valor1)
                                        </th>
                                        <th class="col-lg-1 centrado">
                                            @Html.DisplayNameFor(model => model.First().Valor2)
                                        </th>
                                        <th class="col-lg-1 centrado">
                                            @Html.DisplayNameFor(model => model.First().Valor3)
                                        </th>
                                        <th class="col-lg-1 centrado">
                                            @Html.DisplayNameFor(model => model.First().Valor4)
                                        </th>
                                        <th class="col-lg-1 centrado"></th>
                                        <th class="col-lg-1 centrado"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="col-lg-3 centrado">
                                                @Html.DisplayFor(modelItem => item.TipoTerminal.Descripcion)
                                            </td>
                                            <td class="col-lg-3 centrado">
                                                @Html.DisplayFor(modelItem => item.Referencia)
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                @Html.DisplayFor(modelItem => item.Valor1)
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                @Html.DisplayFor(modelItem => item.Valor2)
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                @Html.DisplayFor(modelItem => item.Valor3)
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                @Html.DisplayFor(modelItem => item.Valor4)
                                            </td>

                                            <td class="col-lg-1 centrado">
                                                <a href="@item.ClienteID/ClientesTerminales/Edit/@item.ID"><span class="glyphicon glyphicon-edit azulOscuro"></span></a>
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="@item.ClienteID/ClientesTerminales/Delete/@item.ID" class="delete" data-gestion-target="#clientesTerminalesList"><span class="glyphicon glyphicon-remove-circle rojo"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="row">

                                <div class="col-md-4 col-md-offset-4 ">
                                    <a href="@ViewBag.Cliente_ID/ClientesTerminales/Create" class="btn btn-block  btn-primary btnSubmit">Agregar Terminal</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




