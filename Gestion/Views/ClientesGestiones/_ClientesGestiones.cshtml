@model IList<Gestion.Models.ClientesGestion>

<div id="clientesGestionesList">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Gestiones del Cliente</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover table-striped table-bordered tableIndex" id="tbGestion">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2centrado">
                                            @Html.DisplayNameFor(model => model.First().Fecha)
                                        </th>
                                        <th class="col-lg-3 centrado">
                                            @Html.DisplayNameFor(model => model.First().Estado.Descripcion)
                                        </th>
                                        <th class="col-lg-3 centrado">
                                            @Html.DisplayNameFor(model => model.First().Observaciones)
                                        </th>
                                        <th class="col-lg-2 centrado">
                                            @Html.DisplayNameFor(model => model.First().FechaRecontacto)
                                        </th>
                                        <th class="col-lg-1 centrado"></th>
                                        <th class="col-lg-1 centrado"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td class="col-lg-3 centrado">
                                                @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                                            </td>
                                            <td class="col-lg-3 centrado">
                                                @Html.DisplayFor(modelItem => item.Observaciones)
                                            </td>
                                            <td class="col-lg-2 centrado">
                                                @Html.DisplayFor(modelItem => item.FechaRecontacto)
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="@item.ClienteID/ClientesGestiones/Edit/@item.ID"><span class="glyphicon glyphicon-edit azulOscuro"></span></a>
                                            </td>
                                            <td class="col-lg-1 centrado">
                                                <a href="@item.ClienteID/ClientesGestiones/Delete/@item.ID" class="delete" data-gestion-target="#clientesGestionesList"><span class="glyphicon glyphicon-remove-circle rojo"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="row">

                                <div class="col-md-4 col-md-offset-4 ">
                                    <a href="@ViewBag.Cliente_ID/ClientesGestiones/Create" class="btn btn-block  btn-primary btnSubmit">Agregar Gesti&oacute;n</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
