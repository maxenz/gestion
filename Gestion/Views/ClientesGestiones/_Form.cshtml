@model Gestion.Models.ClientesGestion

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Gestiones</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.EstadoID, new SelectList(ViewBag.Estados, "ID", "Descripcion"), new { @class = " selectpicker" })
                        @Html.ValidationMessageFor(model => model.EstadoID)
                    </div>
                    <div class="col-lg-2">
                        @Html.TextBoxFor(model => model.Fecha, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker", @placeholder = "Fecha" })
                        @Html.ValidationMessageFor(model => model.Fecha)
                    </div>
                    <div class="col-lg-2">
                        @Html.TextBoxFor(model => model.FechaRecontacto, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker", @placeholder = "Fecha Recontacto" })
                        @Html.ValidationMessageFor(model => model.FechaRecontacto)
                    </div>
                    <div class="col-lg-4">
                       <input type="file" name="pdfDoc"  accept="application/pdf" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", @placeholder = "Observaciones", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Observaciones)
                    </div>
                </div>


                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4">
                        <input type="submit" value="Guardar" class="btn btn-block btn-primary btnSubmit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

