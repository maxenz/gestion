@model Gestion.Models.Revendedor

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Revendedores</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre de Revendedor", autofocus = "" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Comision, new { @class = "form-control", @placeholder = "Comisión" })
                        @Html.ValidationMessageFor(model => model.Comision)
                    </div>
                    <div class="col-md-3" style="margin-top:5px">
                        @Html.LabelFor(model => model.BajoContrato)
                        @Html.EditorFor(model => model.BajoContrato, new { @class = "form-control", @placeholder = "Contrato?" })
                        @Html.ValidationMessageFor(model => model.BajoContrato)
                    </div>
                </div>
          
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <input type="submit" value="Guardar" class="btn btn-block btn-primary btnSubmit" />
                </div>
            </div>
        </div>
    </div>
</div>
</div>


