@model Gestion.Models.TipoTerminal

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Terminales</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Nombre de Terminal", autofocus = "" })
                            @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" value="Guardar" class="btn btn-block btn-primary btnSubmit" />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

