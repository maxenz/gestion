@model Gestion.Models.Provincia

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Provincias</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control", @placeholder = "Cod. Prov.", autofocus = "" })
                @Html.ValidationMessageFor(model => model.Codigo)
                    </div>
                    <div class="col-md-9">
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Nombre de Provincia" })
                @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" value="Guardar" class="btn btn-block btn-primary btnSubmit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
