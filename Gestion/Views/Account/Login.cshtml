@model Gestion.Models.LoginModel

@{
    ViewBag.Title = "Shaman Gestión";
}



<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
        { 
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert">×</a>
                    @Html.ValidationSummary(true)
                </div>
            </div>
        </div>
        } 

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-form">
                    <h3 id="titleLogin">@ViewBag.Title</h3>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control shaman-login", placeholder = "Usuario", autofocus = "" })

                        <span class="input-icon fui-user"></span>
                    </div>

                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control shaman-login", placeholder = "Contraseña" })
                        <span class="input-icon fui-lock"></span>
                    </div>

                    <button class="btn btn-info btn-large btn-block" >Ingresar</button>
                    <a class="login-link" href="#" id="forgotPassword">Olvidaste tu password?</a>
                </div>
            </div>
        </div>

    }

</section>









