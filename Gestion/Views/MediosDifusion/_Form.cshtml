@model Gestion.Models.MedioDifusion

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registro de Medios de Difusi&oacute;n</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Descripción", autofocus = true })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                    <div class="col-md-4" style="padding-top:5px">
                        @Html.LabelFor(model => model.MapaVisible)
                        @Html.EditorFor(model => model.MapaVisible, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.MapaVisible)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" value="Guardar" class="btn btn-block btn-primary btnSubmit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


